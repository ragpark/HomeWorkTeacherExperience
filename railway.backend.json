{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "node server/index.js",
    "healthcheckPath": "/healthz",
    "healthcheckTimeout": 10,
    "numReplicas": 1,
    "restartPolicyType": "ALWAYS"
  },
  "variables": {
    "NODE_ENV": "production"
  }
}
